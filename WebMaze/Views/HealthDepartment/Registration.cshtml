@model WebMaze.Models.HealthDepartment.ForDHRegistrationViewModel

<div class="form">
    <h1 class="form__header">Регистрация</h1>

    <form action="@Url.Action("Registration", "HealthDepartment")" method="post">
        <div class="form__input">
            <label class="text__form">Login</label>
            <div>
                @Html.TextBoxFor(n => n.Login)
                @Html.ValidationMessageFor(n => n.Login)
            </div>
        </div>
        <div class="form__input">
            <label class="text__form">Password</label>
            <div>
                @Html.TextBoxFor(n => n.Password, new { @type = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form__input">
            <label class="text__form">Repeat Password</label>
            <div>
                @Html.TextBoxFor(n => n.RepeatPassword, new { @type = "password" })
                @Html.ValidationMessageFor(m => m.RepeatPassword)
            </div>
        </div>

        <div>
            <button class="button" type="submit">Зарегестрироваться</button>
            <input class="button" type="reset" value="Сбросить">

        </div>
    </form>
</div>

